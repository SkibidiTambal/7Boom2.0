@page "/Table"

<h3> Multiplication Table</h3>

<link rel="stylesheet" href="MyStyleSheet.css">

<table class="table table-bordered">
    <thead>
        <tr>
            <th></th>
            @for (int i = 1; i <= 10; i++)
            {
                <th>@i</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int row = 1; row <= 10; row++)
        {
            <tr>
                <th>@row</th>
                @for (int col = 1; col <= 10; col++)
                {
                    <td>@(row * col)</td>
                }
            </tr>
        }
    </tbody>
</table>

